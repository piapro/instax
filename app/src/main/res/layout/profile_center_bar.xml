<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rllayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlLayout1"
            android:background="@drawable/canvas_bottom_navibar">

            <LinearLayout
                android:id="@+id/lineLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_center_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">

                    <include layout="@layout/top_profile_info"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineLayout1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_center_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Chris Li"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/profile_center_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="I live in Melbourne, AUS"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/profile_center_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="https://chrisli.com"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"/>



            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rllayout3"
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:layout_below="@id/lineLayout2"
                android:layout_marginBottom="50dp">

                <GridView
                    android:id="@+id/profile_grid_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp">

                </GridView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</merge>